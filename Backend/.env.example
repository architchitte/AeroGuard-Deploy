# ============================================================================
# AeroGuard Backend Environment Configuration
# ============================================================================
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive data
# 
# Command to generate SECRET_KEY:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# ============================================================================

# ============================================================================
# Flask Application Settings
# ============================================================================

# Environment mode: development | production | testing
FLASK_ENV=development

# Debug mode: true | false (disable in production)
FLASK_DEBUG=false

# Server host
FLASK_HOST=0.0.0.0

# Server port
FLASK_PORT=5000

# Secret key for session management and CSRF protection
# REQUIRED for production - generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-for-production

# ============================================================================
# CORS (Cross-Origin Resource Sharing) Settings
# ============================================================================

# Comma-separated list of allowed origins
# Examples: http://localhost:3000,https://yourfrontend.com,*
CORS_ORIGINS=*

# ============================================================================
# OpenAI API Configuration (for Generative Explainer)
# ============================================================================

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model to use: gpt-3.5-turbo | gpt-4
OPENAI_MODEL=gpt-3.5-turbo

# ============================================================================
# Model & Caching Settings
# ============================================================================

# Directory for saved models (relative to app root)
MODEL_DIR=models/saved

# Cache timeout for loaded models (in seconds)
MODEL_CACHE_TIMEOUT=3600

# ============================================================================
# Data Processing & Forecasting Settings
# ============================================================================

# Maximum forecast days allowed (1-30)
MAX_FORECAST_DAYS=30

# Minimum forecast days allowed
MIN_FORECAST_DAYS=1

# Default forecast days
DEFAULT_FORECAST_DAYS=7

# ============================================================================
# Request Settings
# ============================================================================

# Maximum request size in bytes (1 MB)
MAX_REQUEST_SIZE=1048576

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ============================================================================
# Logging Settings
# ============================================================================

# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Database Settings (Optional - for future extensions)
# ============================================================================

# Database URL for optional persistence
# Examples:
#   SQLite: sqlite:///aeroguard.db
#   PostgreSQL: postgresql://user:password@localhost/aeroguard
#   MySQL: mysql+pymysql://user:password@localhost/aeroguard
# DATABASE_URL=sqlite:///aeroguard.db

# ============================================================================
# External API Settings (Optional - for future features)
# ============================================================================

# Weather API (for enhanced forecasting)
# WEATHER_API_KEY=your-weather-api-key

# Air Quality Data Provider API
# AQI_API_KEY=your-aqi-api-key

# ============================================================================
# Monitoring & Analytics (Optional)
# ============================================================================

# Enable error tracking/monitoring
# SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# Development Settings (Development environment only)
# ============================================================================

# Enable request/response logging for debugging
DEBUG_REQUESTS=false

# Enable SQL query logging (if using database)
DEBUG_SQL=false
